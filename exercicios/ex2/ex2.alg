algoritmo "Exercício 2"

var
    numero: inteiro
    antecessor: inteiro
    sucessor: inteiro

inicio

    escreval("Digite um número:")
    leia(numero)

    antecessor <- numero - 1
    sucessor <- numero + 1

    escreval("O número dígitado foi ",numero,", o seu antecessor é ",antecessor,"e o sucessor é",sucessor)

fimalgoritmo